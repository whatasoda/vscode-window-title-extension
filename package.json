{
  "name": "vscode-window-title-extension",
  "displayName": "Window Title Extension",
  "description": "Customize VSCode window title with git worktree information",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/whatasoda/vscode-window-title-extension"
  },
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "Window Title Extension",
      "properties": {
        "windowTitleExtension.template": {
          "type": "string",
          "default": "${activeEditorShort}${separator}${rootName}${separator}${worktreeName}",
          "description": "Template for window title. Available variables: ${worktreeName}"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "bun run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "bun run compile && bun run lint",
    "lint": "biome check",
    "lint:fix": "biome check --write",
    "format": "biome format --write",
    "test": "node ./out/test/runTest.js",
    "package": "bun x vsce package",
    "install-extension": "bun run package && code --install-extension vscode-window-title-extension-0.0.1.vsix"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.0.5",
    "@types/node": "16.x",
    "@types/vscode": "^1.74.0",
    "typescript": "^4.9.3"
  }
}
